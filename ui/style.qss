/* ====== GENERAL STYLES ====== */
QWidget
{
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
QPushButton
{
    background-color: #4A5561;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    font-size: 14px;
    color: #ffffff;
}

QPushButton:hover
{

}

/* ====== WINDOW ====== */
QMainWindow {
/*    background-color: #576470;*/
